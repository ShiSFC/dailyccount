.clickLogin{
    margin:0 auto;
    margin-top: 600rpx;
}

.header{
    display: flex;
}

.checked_header{
    flex:3;
    font-size: x-large;
    font-weight: 700;
    text-align: center;
}

.normal_header{
    flex: 1;
    background-color: rgb(229, 235, 233);
    font-size: medium;
    font-weight: normal;
    display: flex;
    align-items: center;
    justify-content: space-around;
    text-align: center;
}

.body{
    margin: 0 30rpx;
}

.session{
    margin: 30rpx 0;
    display: flex;
}

.picker,.amount{
    flex:1;
}

.amount{
    text-align: right;
    float: right;
    flex: 2;
}
.description_text{
    color: #36ab60;
}

.classify_container{
    /* margin: 0 30rpx; */
    /* display: flex;*/
    /* flex-direction: row;  */
    /* justify-content: space-around; */
    display: grid;
    grid-template-columns: repeat(3,1fr);
    grid-auto-rows: minmax(150rpx, auto);
}

.item_detail{
    display: flex;
    align-items: center;
    justify-content: space-around;
    text-align: center;
}

/* 按钮未被选中 */
.normal_classify{
    background-color: #f6f6f6;
}

/* 按钮被选中 */
.checked_classify{
    background-color: #36ab60;
    color: white;
}

.hover_item{
    background-color: #36ab60;
    color: white;
}

.item_container{
    display: grid;
    grid-template-columns: repeat(4,1fr);
    grid-auto-rows: minmax(100rpx, auto);
}



.form_style{
    margin-top: 30rpx;
    display: flex;
}

.remarks_text,.remarks_style,.fee_style{
    display: inline-block;
    height:80rpx;

}

.remarks_text{
    line-height: 80rpx; 
    margin-right: 20rpx;   
}

.remarks_style,.fee_style{
    padding-left: 10rpx;
    font-size: larger;
    font-weight: bold;
    border: 2rpx solid #656967;
    border-radius: 20rpx;
}

.fee_style{
    font-size: x-large;
    padding-right: 10rpx;
    text-align: right;
    float: right;
    margin-left: -2rpx;
}

.add_item{
    font-size: xx-large;
    padding: 10rpx auto;
    text-align: right;
    font-weight: bold;
    color: blue;
}

.submit_style{
    width: 20%;
    float: right;
    margin-top: 40rpx;
    font-size: xx-large;
    box-sizing: border-box;
    padding-left: 0;
    padding-right: 0;
}