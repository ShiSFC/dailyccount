.header{
    display: flex;
}

.digitshow{
    color: rgb(100, 11, 184);
}

.selectItem{
    padding: 30rpx 30rpx;
    text-align: center;
    display: grid;
    grid-template-columns: repeat(2,1fr);
    /* grid-auto-rows: minmax(150rpx, auto); */
}

.showMoney{
    margin-left: 50rpx;
    text-align: left;
}

.showMonth{
    margin: 20rpx;
    display: flex;
}

.showDay{
    margin:20rpx 40rpx;
    display: flex;
    padding: 6rpx;
    margin-bottom: 10rpx;
    min-height: 60rpx;
    line-height: 60rpx;
    border: 2rpx solid rgb(204, 243, 245);
    background-color: rgb(236, 248, 248);
}

.showDetail{
    margin: auto 60rpx;
}

.showExpense{    
    display: flex;
    text-align: left;
    padding: 6rpx;
    margin-bottom: 6rpx;
    min-height: 60rpx;
    /* line-height: 60rpx; */
    border: 2rpx solid rgb(243, 104, 94);
    background-color: rgb(230, 167, 162);
}

.showIncome{
    display: flex;
    text-align: left;
    padding: 6rpx;
    margin-bottom: 6rpx;
    min-height: 60rpx;
    border: 2rpx solid rgb(146, 205, 233);
    background-color: rgb(198, 219, 243);
}

.showTotal{
    flex: 1.5;
    text-align: center;
    line-height: 60rpx;
}

.showCategory{
    flex: 1.5;
    text-align: center;
    line-height: 60rpx;
}

.showMoney{
    flex: 2;
    line-height: 60rpx;
}

.showRemarks{
    flex: 2;
    font-size: small;
    display: flex;
    align-items: center;
}